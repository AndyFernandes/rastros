{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "name": "mapa",
    "url": "data/ceara.topojson",
    "format": {
      "type": "topojson",
      "feature": "ceara"
    }
  },
  "transform": [{
    "lookup": "id",
    "from": {
      "data": {
        "name": "dataset"
      },
      "key": "id"
    }
  }],
  "projection": {
    "type": "mercator"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "type": "quantitative",
      "scale":{}
    },
    "tooltip": [
      { "type": "ordinal" },
      { "type": "quantitative" }
    ]
  }
}