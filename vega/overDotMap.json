{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 800,
  "height": 600,
  "layer": [
    {
      "data": {
        "url": "vega/data/ceara.topojson",
        "format": {
          "type": "topojson",
          "feature": "ceara"
        }
      },
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "fill": "gray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "data/reservatorios/relatorio_anual/relatorio_2011.csv"
      },
      "transform": [
				{ "filter": "datum.Latitude != 0"},
				{ "filter": "datum.Longitude != 0"}
			],
      "projection": {
        "type": "mercator"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "tooltip": [ 
        	{ "field": "Nome", "type": "ordinal" },
        	{ "field": "Volume Util (hm3)", "type": "quantitative" } 
        ],
        "size": { 
        	"field": "Volume Util (hm3)", 
        	"type": "quantitative", 
        	"scale": {"range": [0, 10000]},
        	"legend": { 
        		"title": "Volume Ãštil (hm3)", 
        		"clipHeight": 50,
        		"tickCount": 10
        	}
        },
        "color": { "value": "#2222FFAA" }
      }
    }
  ]
}
