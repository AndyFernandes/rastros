{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 800,
  "height": 600,
  "data": {"url": "data/agricola/areacolhida_ceara.csv"},
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Data",
      "type": "ordinal",
      "axis": {"title": "Ano"}
    },
    "y": {
      "field": "Area Colhida (hct)",
      "aggregate": "sum",
      "type": "quantitative",
      "axis": {"title": "Area Colhida (hectares)"}
    },
    "color": {
      "field": "Produto", "type": "nominal",
      "scale": {
        "range": ["#e7ba52","#c7c7c7","#aec7e8","#1f77b4","#9467bd","#7414b0" ]
      },
      "legend": {"title": "Produto"}
    }
  }
}